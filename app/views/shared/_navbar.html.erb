<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i><b><span style="color: #409DE5;">FindMySensei</span></b></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <%= form_tag root_path, method: :get do %>
        <div class="search d-flex">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control mr-2",
            placeholder: "Find a course or teacher"
          %>
          <%= submit_tag "Search", class: "btn btn-sm btn-outline-primary btn-rounded mr-4" %>
        </div>
        <% end %>
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "My Bookings", bookings_path, class: "nav-link mr-4" %>
          </li>
          <!-- <li class="nav-item">
            <%#= link_to "Messages", "#", class: "nav-link" %>
          </li> -->
          <li class="nav-item dropdown">

            <% if current_user[:photo].nil? %>
              <%= cl_image_tag("agtopbcdyfpnanvjlwkh",
                   :crop => :fill, :id => "navbarDropdown", :data => { :toggle => "dropdown" }, :'aria-haspopup' => true,
                   :'aria-expanded' => false, class: "avatar dropdown-toggle",
                   :default_image => "agtopbcdyfpnanvjlwkh.png") %>
            <% else %>
              <%= cl_image_tag current_user.photo, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <%#= cl_image_tag current_user.photo, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
                <%= link_to "Add a Course", new_course_path(@course), class: "dropdown-item" %>
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
