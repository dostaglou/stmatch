<img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
<div class="card-course-infos booking-card">
  <div>
    <div class="card-course-title">
      <h2>
        <%= link_to booking_path(booking) do %>
          <%= booking.course.name %>
        <% end %>
      </h2>
    </div>
  </div>

  <div class="booking-info">
    <p><strong>Student</strong> <%= booking.user.first_name %> <%= booking.user.last_name %></p>
    <p><strong>Status</strong> <%= booking.status %></p>
    <p><strong>Date</strong> <%= booking.date.strftime("%A %d %b %Y") %></p>
    <p><strong>Location</strong> <%= booking.location %></p>
    <div class="edit-options">
      <%= link_to edit_booking_path(booking) do %>
        <i class="fas fa-edit edit"></i>
      <% end %>
      <%= link_to booking_path(booking), method: :delete do %>
        <i class="fas fa-times delete"></i>
      <% end %>
    </div>
  </div>
</div>
