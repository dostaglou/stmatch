<div class="container profile py-5">
  <div class="booking-heading">
    <i class="fas fa-check progress-circle"></i>
    <h1>Your booking for <%= @course.name %></h1>
  </div>

  <div class="row mt-4">
    <div class="col-lg-6 col-md-12">
      <div class="booking-info">
        <h3>Booking Details</h3>
        <p><strong>Student</strong> <%= @booking.user.first_name %> <%= @booking.user.last_name %></p>
        <p><strong>Course</strong> <%= @booking.course.name %></p>
        <p><strong>Instructor</strong> <%= @booking.course.user.first_name %> <%= @booking.course.user.last_name %></p>
        <p><strong>Status</strong> <%= @booking.status %></p>
        <p><strong>Date</strong> <%= @booking.date.strftime("%A %d %b %Y") %></p>
        <p><strong>Location</strong> <%= @booking.location %></p>
        <div class="edit-options">
          <%= link_to edit_booking_path(@booking) do %>
            <i class="fas fa-edit edit"></i>
          <% end %>
          <%= link_to booking_path(@booking), method: :delete do %>
            <i class="fas fa-times delete"></i>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-6 col-md-12">
      <div
        id="map"
        style="width: 100%;
        height: 400px;"
        data-markers="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>

</div>
