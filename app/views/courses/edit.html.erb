<div class="wrapper form-wrapper">
  <h1 class="header">
    How Should We Change the Course?
  </h1>
   <%= simple_form_for @course do |f| %>
    <%= f.input :name, placeholder: "Make it clear & catchy"%>
    <%= f.input :level, collection:
      ["Beginner", "Intermediate", "Advanced", "Native"]  %>
    <%= f.input :duration, collection:
      [20, 40, 60, 80, 100, 120, 140, 160,180], hint: "in minutes" %>
    <%= f.input :description, placeholder: "Piffy is best" %>
    <%= f.input :price, placeholder: "Price per hour in å††" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <div class="d-flex justify-content-between m-2 mt-4" >
    <%= link_to "Return Home", root_path, class:"btn" %>
    <%= f.button :submit, class:"btn btn-primary"%>
    </div>
  <% end %>
</div>
